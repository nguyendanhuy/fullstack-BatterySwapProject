{
  "compilerOptions": {
    "jsx": "preserve",            // GIỮ JSX
    "outDir": "src-js",           // thư mục JS/JSX đầu ra
    "declaration": false,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src"]
}
